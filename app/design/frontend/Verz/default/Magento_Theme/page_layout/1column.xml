<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_layout.xsd">
    <update handle="empty"/>
    
	<referenceContainer name="columns">
		<container name="custom.page.content" htmlTag="div" htmlClass="container" htmlId="custom_main_container" after="-">
		</container>
	</referenceContainer> 
	<move element="main" destination="custom.page.content" before="-" />
	<move element="page.main.title" destination="custom.page.content" before="-" />
	<referenceContainer name="sidebar.additional" remove="1"/>
</layout>
