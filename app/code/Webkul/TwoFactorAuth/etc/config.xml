<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <twofactorauth>
            <enable>
                <twofactorauth_enable>1</twofactorauth_enable>
                <twofactorauth_enable_registration>1</twofactorauth_enable_registration>
                <expiry>60</expiry>
                <send_otp_source>mobile</send_otp_source>   
            </enable>
            <twiliosettings>
                <message>Your Auth Code is {auth_code}.</message>
            </twiliosettings>
        </twofactorauth>
    </default>
</config>