<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="webkul" translate="label" sortOrder="10" class="wk-config-tab-class">
            <label>Webkul</label>
        </tab>
        <section id="twofactorauth" translate="label" type="text" sortOrder="300" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>TwoFactorAuth</label>
            <tab>webkul</tab>
            <resource>Webkul_TwoFactorAuth::webkul</resource>
            <group id="enable" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>TwoFactorAuth</label>
                <field id="twofactorauth_enable" translate="label comment" sortOrder="1" type="select" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable Module on Frontend</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="twofactorauth_enable_registration" translate="label comment" sortOrder="2" type="select" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Need Auth Code Validation On New Customer Registration</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <depends>
                        <field id="twofactorauth_enable">1</field>
                    </depends>
                </field>
                <field id="expiry" translate="label" type='text' sortOrder="6" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Auth Code Expiry</label>
                    <comment>Set expiry time in seconds and between range (60 - 300) else automatically 60 will be taken.</comment>
                     <validate>required-entry validate-digits validate-not-negative-number validate-digits-range digits-range-60-300</validate>
                    <depends>
                        <field id="twofactorauth_enable_registration">1</field>
                    </depends>
                </field>
                 <field id="send_otp_source" translate="label" sortOrder="7" type="select" showInDefault="1" showInWebsite="1" canRestore="1">
                    <label>Send Otp Via</label>
                    <source_model>Webkul\TwoFactorAuth\Model\Config\Source\SendOtpSources</source_model>
                    <depends>
                        <field id="twofactorauth_enable">1</field>
                    </depends>
                </field>
                 <field id="sender_mail" translate="label" sortOrder="7" type="text" showInDefault="1" showInWebsite="1" canRestore="1">
                   <label>Sender Email Id</label>
                    <validate>required-entry validate-email</validate>
                    <depends>
                        <field id="send_otp_source" separator=",">email,emaillink</field>
                    </depends>
                   
                </field>
                <field id="sendgrid_key" translate="label" sortOrder="7" type="obscure" showInDefault="1" showInWebsite="1" canRestore="1">
                   <label>SendGrid Api Key</label>
                    <validate>required-entry</validate>
                    <depends>
                        <field id="send_otp_source" separator=",">email,emaillink</field>
                    </depends>
                </field>
                <field id="application_apiKey" translate="label" sortOrder="8" type="obscure" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Web API Key</label>
                    <validate>required-entry</validate>
                    <depends>
                        <field id="send_otp_source">pushnotify</field>
                    </depends>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                </field>
                <field id="application_authDomain" translate="label" sortOrder="9" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>FCM Auth Domain</label>
                    <validate>required-entry</validate>
                     <depends>
                        <field id="send_otp_source">pushnotify</field>
                    </depends>
                </field>
                <field id="application_databaseURL" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>FCM Database URL</label>
                    <validate>required-entry</validate>
                     <depends>
                        <field id="send_otp_source">pushnotify</field>
                    </depends>
                </field>
                <field id="application_projectId" translate="label" sortOrder="11" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>FCM Project Id</label>
                    <validate>required-entry</validate>
                     <depends>
                        <field id="send_otp_source">pushnotify</field>
                    </depends>
                </field>
                <field id="application_sender_id" translate="label" sortOrder="12" type="obscure" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Messaging Sender Id</label>
                    <validate>required-entry</validate>
                     <depends>
                        <field id="send_otp_source">pushnotify</field>
                    </depends>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                </field>
                <field id="application_appId" translate="label" sortOrder="13" type="obscure" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>FCM App Id</label>
                    <validate>required-entry</validate>
                     <depends>
                        <field id="send_otp_source">pushnotify</field>
                    </depends>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                </field>
                <field id="application_server_key" translate="label" sortOrder="14" type="obscure" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Server Key</label>
                    <validate>required-entry</validate>
                     <depends>
                        <field id="send_otp_source">pushnotify</field>
                    </depends>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                </field>
                <field id="application_public_key" translate="label" sortOrder="15" type="obscure" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Public Key</label>
                    <validate>required-entry</validate>
                     <depends>
                        <field id="send_otp_source">pushnotify</field>
                    </depends>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                </field> 
            </group>
            <group id="twiliosettings" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Twilio Auth</label>
                <field id="authId" translate="label" type='obscure' sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1" >
                    <label>Auth Id</label>
                    <validate>required-entry</validate>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                </field>
                <field id="token" translate="label" type='obscure' sortOrder="4" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Token</label>
                    <validate>required-entry</validate>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                </field>
                <field id="message" translate="label" type="textarea" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Message</label>
                </field>
                <field id="number" translate="label" type="text" sortOrder="6" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Sender Number</label>
                    <validate>required-entry</validate>
                </field>
            </group>
            <group id="twofactorauth_product_information" translate="label" type="text" sortOrder="700" showInDefault="1"
                   showInWebsite="0" showInStore="0">
                <label>TwoFactorAuth Product Information</label>
                <field id="author" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0"
                       showInStore="0">
                   <frontend_model>Webkul\TwoFactorAuth\Block\Adminhtml\System\Config\ModuleInfo</frontend_model>
                </field>
            </group>
        </section>
    </system>
</config>
