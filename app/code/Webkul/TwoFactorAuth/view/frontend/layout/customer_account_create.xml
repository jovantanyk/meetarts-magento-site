<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="mobile_verfication" template="Webkul_TwoFactorAuth::verifyAuthCode.phtml" ifconfig="twofactorauth/enable/twofactorauth_enable" >
                <arguments>
                    <argument name="view_model" xsi:type="object">Webkul\TwoFactorAuth\ViewModel\HelperViewModel</argument>
                </arguments>
            </block>
            <block class="Magento\Customer\Block\Form\Register" name="twofactorauth_customer_form_register" template="Webkul_TwoFactorAuth::customer_signup.phtml" ifconfig="twofactorauth/enable/twofactorauth_enable" cacheable="false">
                <arguments>
                    <argument name="attribute_data" xsi:type="object">Magento\Customer\Block\DataProviders\AddressAttributeData</argument>
                    <argument name="view_model" xsi:type="object">Webkul\TwoFactorAuth\ViewModel\HelperViewModel</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>