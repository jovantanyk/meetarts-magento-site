<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd" label="TwoFactorAuth" design_abstraction="custom">
    <body>
        <attribute name="class" value="account"/>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="customer-account-credits-index-link" ifconfig="twofactorauth/enable/twofactorauth_enable">
                <arguments>
                    <argument name="path" xsi:type="string">twofactorauth/account/backupcode</argument>
                    <argument name="label" xsi:type="string" translate="true">Backup Code</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
