<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
    <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Backup codes </argument>
            </action>
        </referenceBlock>

        <referenceContainer name="content">
            <block class="Webkul\TwoFactorAuth\Block\BackupCode" name="twoFactorAuth_customer_backupcode" template="Webkul_TwoFactorAuth::backupcode.phtml" ifconfig="twofactorauth/enable/twofactorauth_enable"  cacheable="false">
                <arguments>
                    <argument name="view_model" xsi:type="object">Webkul\TwoFactorAuth\ViewModel\HelperViewModel</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
